<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="8dp"
    app:layout_editor_absoluteY="8dp"
    android:layout_gravity="center"
    tools:context=".Kalkulator">

    <EditText
        android:id="@+id/txtA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""/>

    <EditText
        android:id="@+id/txtB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@+id/txtA"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""/>

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="+"/>
    <Button
        android:id="@+id/btn_kurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtC"
        android:layout_alignBaseline="@+id/btn_tambah"
        android:layout_alignBottom="@+id/btn_tambah"
        android:layout_toEndOf="@+id/btn_tambah"
        android:layout_toRightOf="@+id/btn_tambah"
        android:text="-"/>
    <Button
        android:id="@+id/btn_kali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtC"
        android:layout_alignBaseline="@+id/btn_kurang"
        android:layout_alignBottom="@+id/btn_kurang"
        android:layout_toEndOf="@+id/btn_kurang"
        android:layout_toRightOf="@+id/btn_kurang"
        android:text="X"/>
    <Button
        android:id="@+id/btn_bagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtC"
        android:layout_alignBaseline="@+id/btn_kali"
        android:layout_alignBottom="@+id/btn_kali"
        android:layout_toEndOf="@+id/btn_kali"
        android:layout_toRightOf="@+id/btn_kali"
        android:text="/"/>
    <EditText
        android:id="@+id/txtC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text=""/>

</RelativeLayout>